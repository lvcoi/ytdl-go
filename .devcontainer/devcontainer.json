{
  "name": "ytdl-go",
  "build": {
    "context": ".",
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/go": {
      "version": "1.24"
    },
    "ghcr.io/devcontainers/features/node": {
      "version": "22"
    }
  },
  "runArgs": ["--network=host"],
  "forwardPorts": [8080, 5173],
  "portsAttributes": {
    "8080": {
      "label": "Backend",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Frontend (Vite)",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}
